  <body>
    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('../layout/header') %>


    <div class="container py-5 " style="margin-top: 8%;"  >
      <div class="row justify-content-center">
        <div class="col-md-7 bg-white shadow rounded-4 p-5">
          <h4 class="text-primary mb-4">
            <i class="bi bi-pencil-square me-2"></i> Edit Your Review
          </h4>
          <form method="POST" action="/product/<%= product.id %>/review/<%= review.id %>">
            <!-- Rating -->
            <div class="mb-4">
              <label class="form-label fw-semibold text-dark">Rating</label>
              <select name="rating" class="form-select border border-primary-subtle rounded-3" required>
                <% for (let i = 1; i <= 5; i++) { %>
                  <option value="<%= i %>" <%= i === review.rating ? 'selected' : '' %>>
                    <%= i %> Star<%= i > 1 ? 's' : '' %>
                  </option>
                <% } %>
              </select>
            </div>
    
            <!-- Content -->
            <div class="mb-4">
              <label class="form-label fw-semibold text-dark">Your Review</label>
              <textarea name="content" rows="4" class="form-control border border-secondary-subtle rounded-3 shadow-sm" placeholder="Update your experience..." required><%= review.content %></textarea>
            </div>
    
            <!-- Buttons -->
            <div class="d-flex justify-content-between align-items-center">
              <a href="/product/<%= product.id %>" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
              </a>
              <button type="submit" class="btn btn-success rounded-pill px-4">
                <i class="bi bi-save me-1"></i> Update Review
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
