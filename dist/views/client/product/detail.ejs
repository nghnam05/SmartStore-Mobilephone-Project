<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />
    <title>Products Deatils Viewers</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://i.pinimg.com/736x/89/f1/d6/89f1d65fe8b8bf81eb8ddbb417537d17.jpg"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Glide.js CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.6.0/dist/css/glide.core.min.css"
    />

    <!-- Glide.js JS -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.6.0/dist/glide.min.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
      rel="stylesheet"
    />
    <!-- Icon Font Stylesheet -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link
      href="/client/lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <link href="/client/css/style.css" rel="stylesheet" />
    <link href="/client/css/product/details-product.css" rel="stylesheet" />
    <link href="/client/css/layout/layout.css" rel="stylesheet" />
  </head>
  <body>
    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('../layout/header') %>
    <div class="container py-3" style="margin-top: 10% !important">
      <nav aria-label="breadcrumb " class="mb-5">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
          <li class="breadcrumb-item">
            <a href="/product">Chi tiết sản phẩm</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= product.name%>
          </li>
        </ol>
      </nav>

      <div class="row g-4 align-items-start">
        <div class="col-md-6">
          <div
            class="preview-image-product d-flex flex-column align-items-center"
          >
            <img
              src="/images/product/<%= product.image %>"
              alt="<%= product.name %>"
              style="max-width: 70%; height: auto"
            />
          </div>
        </div>

        <div
          class="col-md-6 bg-light d-flex flex-column justify-content-start px-4 py-3 rounded-3"
        >
          <!-- Tên sản phẩm -->
          <h3 class="fw-bold" style="color: #1976d2"><%= product.name %></h3>

          <!-- Giá sản phẩm -->
          <% const discountPercent = 10; %> <% const discountAmount =
          Math.floor((product.price * discountPercent) / 100); %> <% const
          finalPrice = product.price - discountAmount; %>

          <!-- Giá gốc & Giá khuyến mãi nằm cùng 1 hàng -->
          <div class="d-flex align-items-center gap-3 mt-3">
            <span class="fw-bold fs-6">Giá gốc:</span>
            <del class="text-muted small">
              <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency:
              'VND' }).format(product.price) %>
            </del>
            <span class="fw-bold text-danger fs-4">
              <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency:
              'VND' }).format(finalPrice) %>
            </span>
          </div>

          <!-- Màu sắc -->
          <div class="my-3">
            <label class="form-label fw-bold me-3">Màu sắc:</label>
            <span class="color-circle" style="background: #000"></span>
            <span
              class="color-circle"
              style="background: #fff; border: 1px solid #ccc"
            ></span>
            <span class="color-circle" style="background: #56dfcf"></span>
            <span class="color-circle" style="background: #fff287"></span>
            <span class="color-circle" style="background: #c68efd"></span>
            <span class="color-circle" style="background: #cb0404"></span>
          </div>

          <!-- RAM & Bộ nhớ -->
          <div class="my-2 d-flex gap-4 flex-wrap">
            <div class="fw-semibold">RAM: <%= product.ram %></div>
            <div class="fw-semibold">Bộ nhớ: <%= product.storage %></div>
          </div>

          <!-- Dung lượng chọn thêm -->
          <div class="my-2">
            <label class="form-label fw-bold">Chọn dung lượng khác:</label
            ><br />
            <div class="d-flex gap-2 flex-wrap">
              <button class="storage-option active">
                <%= product.storage || '128GB' %>
              </button>
              <% if (product.storage !== '256GB') { %>
              <button class="storage-option">256GB</button>
              <% } %> <% if (product.storage !== '512GB') { %>
              <button class="storage-option">512GB</button>
              <% } %> <% if (product.storage !== '1TB') { %>
              <button class="storage-option">1TB</button>
              <% } %>
            </div>
          </div>

          <!-- Mô tả chi tiết -->
          <div class="mb-3 description-box">
            <label class="fw-bold">Mô tả chi tiết:</label>
            <p class="card-text small text-muted clamp-2-line">
              <%= product.detailDesc %>
            </p>
          </div>

          <!-- Nút thêm vào giỏ hàng -->
          <% if (product.quantity > 0) { %>
          <form
            method="post"
            class="d-flex mt-3"
            action="/add-product-to-card/<%= product.id %>"
          >
            <button
              type="submit"
              class="py-2 rounded-pill px-3 buy-btn text-white"
            >
              <i class="fa fa-shopping-bag me-2"></i>
              Thêm vào giỏ hàng
            </button>
          </form>
          <% } else { %>
          <div
            class="alert alert-danger mt-3 d-inline-flex align-items-center gap-2 rounded-pill px-4 py-2 small"
            role="alert"
          >
            <i class="bi bi-exclamation-circle"></i> Hết hàng
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <hr />
    <div class="container mt-4">
      <div class="row mb-3 justify-content-between">
        <div class="col-lg-5">
          <h4 class="fw-semibold mb-4 text-uppercase">
            Thông tin thêm về sản phẩm :
          </h4>

          <p class="text-muted"><%= product.shortDesc %></p>
          <p class="text-muted"><%= product.detailDesc %></p>
        </div>
        <div class="col-md-6">
          <div class="border rounded p-3 bg-light">
            <h5 class="fw-bold text-success mb-3">
              <i class="bi bi-gift-fill me-2"></i>ƯU ĐÃI THÊM
            </h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <span class="fw-bold text-success">1.</span>
                Nhận báo giá tốt nhất cho khách hàng doanh nghiệp B2B khi mua số
                lượng lớn.
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
              <li class="mb-2">
                <span class="fw-bold text-success">2.</span>
                Mở thẻ TPBank EVO - Giảm đến 500.000đ
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
              <li class="mb-2">
                <span class="fw-bold text-success">3.</span>
                Giảm 700k khi thanh toán qua thẻ tín dụng Techcombank
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
              <li class="mb-2">
                <span class="fw-bold text-success">4.</span>
                Mở thẻ VPBank - Giảm đến 500.000đ
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
              <li class="mb-2 text-muted">
                <span class="fw-bold">5.</span>
                Hoàn tiền 4% tối đa 200k khi thanh toán bằng thẻ VISA
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
              <li class="mb-2 text-muted">
                <span class="fw-bold">6.</span>
                Giảm 15% tối đa 500k khi thanh toán qua thẻ tín dụng của NCB
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
              <li class="mb-2 text-muted">
                <span class="fw-bold">7.</span>
                Giảm 15% tối đa 500k khi thanh toán qua thẻ tín dụng của NCB
                <a href="#" class="text-success fw-bold">(Xem chi tiết)</a>
              </li>
            </ul>
            <div class="text-center">
              <button class="btn btn-outline btn-sm">
                XEM THÊM ƯU ĐÃI <i class="bi bi-caret-down-fill"></i>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-5">
        <h2 class="fs-5 mb-4">THÔNG SỐ KỸ THUẬT</h2>
        <!-- Cột trái -->
        <div class="col-md-4">
          <div class="d-flex label-box">
            <div class="label-title">Mẫu sản phẩm</div>
            <div><%= product.name %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Trọng lượng</div>
            <div>228 g</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Màu sắc</div>
            <div>Đen Graphite</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Camera</div>
            <div><%= product.camera %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Xuất xứ</div>
            <div>Mỹ</div>
          </div>
        </div>

        <!-- Cột giữa -->
        <div class="col-md-4">
          <div class="d-flex label-box">
            <div class="label-title">Màn hình</div>
            <div><%= product.screen %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Bộ vi xử lý</div>
            <div><%= product.os %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Pin</div>
            <div><%= product.battery %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Bộ nhớ</div>
            <div><%= product.storage %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">RAM</div>
            <div><%= product.ram %></div>
          </div>
        </div>

        <!-- Cột phải: Danh mục -->
        <div class="col-md-4">
          <h5 class="mb-3 fw-bold border-bottom pb-2 fs-4 text-dark">
            Danh mục sản phẩm:
          </h5>
          <ul class="list-group shadow-sm rounded">
            <li class="list-group-item d-flex align-items-center gap-2 fw-bold">
              <i class="bi bi-tags-fill text-primary"></i>
              <%= product.factory %>
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-phone-fill text-success"></i>
              Đối tượng: <%= product.target %>
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-battery-half text-danger"></i>
              Dung lượng pin: <%= product.battery %>
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-display text-primary"></i>
              Màn hình: <%= product.screen %>
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-star-fill text-warning"></i>
              Đánh giá: <%= product.rating %>/5
            </li>
          </ul>
        </div>
      </div>
    </div>
    <hr>
    <!-- rating and comment -->
    <div
      class="container-fluid px-5 py-4 bg-body-tertiary rounded-4 shadow-sm"
    >
      <div class="row justify-content-center gap-5">
        <!-- Gửi đánh giá -->
        <div class="col-md-5 bg-white p-4 rounded-4 shadow-sm">
          <% if (user) { %>
          <h5 class="mb-4" style="color: #000">
            <i class="bi bi-chat-left-dots-fill me-1"></i> Gửi đánh giá của bạn
          </h5>
          <form action="/product/<%= product.id %>/review" method="POST">
            <div class="mb-3">
              <label
                for="rating"
                class="form-label fw-semibold"
                style="color: #333"
                >Đánh giá</label
              >
              <select
                name="rating"
                class="form-select border border-1"
                required
              >
                <% for (let i = 1; i <= 5; i++) { %>
                <option value="<%= i %>"><%= i %> sao</option>
                <% } %>
              </select>
            </div>
            <div class="mb-3">
              <label
                for="content"
                class="form-label fw-semibold"
                style="color: #333"
                >Nội dung đánh giá</label
              >
              <textarea
                name="content"
                rows="3"
                class="form-control border border-1"
                placeholder="Hãy chia sẻ trải nghiệm của bạn..."
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="btn rounded-pill px-4 text-white btn-review-submit"
              style="background-color: #000"
            >
              <i class="bi bi-send-fill me-1"></i> Gửi đánh giá
            </button>
          </form>
          <% } else { %>
          <div
            class="alert d-flex align-items-center gap-3 bg-white border border-1 shadow-sm rounded-4 px-4 py-3 mt-2"
          >
            <i class="bi bi-info-circle-fill fs-4" style="color: #ff9800"></i>
            <div class="flex-grow-1">
              <span class="fw-semibold" style="color: #333"
                >Bạn cần đăng nhập để đánh giá sản phẩm.</span
              >
              <br />
              <a
                href="/login"
                class="fw-bold text-decoration-none"
                style="color: #5e35b1"
              >
                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập ngay
              </a>
            </div>
          </div>
          <% } %>
        </div>

        <!-- Hiển thị đánh giá -->
        <div class="col-md-6">
          <h5 class="mb-3" style="color: #222">
            <i class="bi bi-people-fill me-2"></i> Đánh giá từ người dùng
          </h5>

          <div
            class="bg-white rounded-4 shadow-sm p-3"
            style="max-height: 400px; overflow-y: auto; scrollbar-width: thin"
          >
            <% product.Review.forEach(review => { %>
            <div class="border-bottom pb-3 mb-3 position-relative">
              <div
                class="d-flex justify-content-between align-items-center mb-2"
              >
                <strong style="color: #222">
                  <i class="bi bi-person-circle me-1 text-secondary"></i>
                  <%= review.user.fullname || review.user.username %>
                </strong>
                <small style="color: #999">
                  <i class="bi bi-calendar-event me-1"></i>
                  <%= review.createdAt.toLocaleDateString('vi-VN') %>
                </small>
              </div>

              <!-- Rating sao -->
              <div class="mb-2" style="color: #ffc107">
                <% for (let i = 1; i <= 5; i++) { %> <% if (i <= review.rating)
                { %>
                <i class="bi bi-star-fill"></i>
                <% } else { %>
                <i class="bi bi-star"></i>
                <% } %> <% } %>
              </div>

              <!-- Nội dung -->
              <p class="fst-italic mb-1" style="color: #555">
                "<%= review.content %>"
              </p>

              <% if (user && review.userId === user.id) { %>
              <a
                href="/product/<%= product.id %>/review/<%= review.id %>/edit"
                class="btn btn-sm rounded-pill border px-3 me-2"
                style="color: #1976d2; border-color: #1976d2"
              >
                <i class="bi bi-pencil-square"></i> Sửa
              </a>
              <form
                action="/product/<%= product.id %>/review/<%= review.id %>/delete"
                method="POST"
                class="d-inline"
              >
                <button
                  class="btn btn-sm rounded-pill border text-danger px-3"
                  onclick="return confirm('Bạn chắc chắn muốn xoá?')"
                >
                  <i class="bi bi-trash"></i> Xoá
                </button>
              </form>
              <% } %>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  

    <div class="row px-5 bg-light py-4">
      <div class="container position-relative px-5">
        <div class="mb-4">
          <h3 class="section-title d-flex align-items-center gap-3 mb-4">
            <span class="fw-normal fs-4" style="color: #2c3e50">
              Các sản phẩm nổi bật khác
            </span>
          </h3>
        </div>

        <button
          class="scroll-btn scroll-left position-absolute top-50 start-0 translate-middle-y btn btn-light shadow rounded-circle"
          style="z-index: 10"
          onclick="scrollProducts('left')"
        >
          <i class="bi bi-chevron-left fs-4"></i>
        </button>
        <div
          id="productSlider"
          class="d-flex gap-4 overflow-auto px-4 py-2"
          style="scroll-behavior: smooth"
        >
          <% products.forEach((product) => { %>
          <div style="min-width: 240px; max-width: 240px; flex: 0 0 auto">
            <div
              class="card product-card h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative"
              style="min-height: 320px"
            >
              <div
                class="card-image d-flex justify-content-center align-items-center p-2"
                style="height: 180px"
              >
                <img
                  src="/images/product/<%= product.image %>"
                  class="object-fit-cover"
                  alt="product-image"
                  style="max-height: 100%; max-width: 90%"
                />
              </div>
              <div
                class="card-body text-start d-flex flex-column justify-content-between gap-2 px-3 pb-3"
              >
                <h6
                  class="product-name fw-bold mb-1 fs-6"
                  style="color: #0d5ea6"
                >
                  <%= product.name %>
                </h6>
                <p
                  class="card-text small text-muted mb-2 clamp-2-line"
                  style="font-size: 0.85rem"
                >
                  <%= product.detailDesc %>
                </p>
                <div class="d-flex justify-content-center">
                  <a
                    href="/product/<%= product.id %>"
                    class="text-decoration-none text-dark fw-medium small d-inline-flex align-items-center gap-1 hover-underline bg-light py-1 px-2 rounded-pill"
                  >
                    View Details
                    <i class="bi bi-box-arrow-up-right"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <% }); %>
        </div>

        <button
          class="scroll-btn scroll-right position-absolute top-50 end-0 translate-middle-y btn btn-light shadow rounded-circle"
          style="z-index: 10"
          onclick="scrollProducts('right')"
        >
          <i class="bi bi-chevron-right fs-4"></i>
        </button>
      </div>
    </div>

    <!-- back to top  -->
    <a href="#" class="btn border-3 rounded-circle back-to-top"
      ><i class="fa fa-arrow-up"></i
    ></a>
    <a href="#" class="btn border-3 rounded-circle back-to-top"
      ><i class="fa fa-arrow-up"></i
    ></a>
    <%- include('../layout/footer') %>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/client/lib/easing/easing.min.js"></script>
    <script src="/client/lib/waypoints/waypoints.min.js"></script>
    <script src="/client/lib/lightbox/js/lightbox.min.js"></script>
    <script src="/client/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <!-- Template Javascript -->
    <script src="/client/js/main.js"></script>
    <script src="/client/js/detailproduct/details-products.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script
      src="//code.tidio.co/jessuvetqgbmlfbbicxo08yqsjeeprfb.js"
      async
    ></script>
  </body>
</html>
