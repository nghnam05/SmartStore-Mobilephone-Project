<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Login-Smart Store Mobilephone Shop</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://i.pinimg.com/736x/82/39/3f/82393f7f6c132e1dfb5402e4a9232bfa.jpg"
    />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Glide.js CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.6.0/dist/css/glide.core.min.css"
    />

    <!-- Glide.js JS -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.6.0/dist/glide.min.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
      rel="stylesheet"
    />
    <!-- Icon Font Stylesheet -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link
      href="/client/lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <link href="/client/css/register/register.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container px-2">
      <div class="row signup-container mx-auto p-3" style="max-width: 880px">
        <!-- Left Image -->
        <div
          class="col-md-6 d-flex align-items-center justify-content-center signup-img rounded bg-light"
        >
          <img
            src="/client/img/register-image/register.png"
            class="img-fluid rounded"
            alt="Signup Image"
          />
        </div>

        <!-- Right Form -->
        <div class="col-md-6 p-4">
          <div class="text-start mb-2">
            <h2 class="fw-bold mb-4">
              <span style="font-size: 42px; color: #4a56e2">S</span
              ><span style="color: #000">mart</span>
              <span style="font-size: 42px; color: #f44336">S</span
              ><span style="color: #000">tore</span>
              <i class="bi bi-shop-window"></i>
            </h2>
          </div>

          <h3 class="fw-bold mb-1">Sign up</h3>
          <p class="text-muted small mb-2">
            Let's get you all set up so you can access your personal account.
          </p>
          <% if (errors && errors.length > 0) { %> <%
          errors.forEach(function(error) { %>
          <div class="alert alert-danger mb-3"><%= error %></div>
          <% }); %> <% } %>

          <form action="/register" method="POST">
            <!-- Full Name -->
            <div class="form-floating form-floating-sm mb-2">
              <input
                type="text"
                class="form-control"
                id="fullname"
                placeholder="Full Name"
                value="<%=oldData.fullname %>"
                name="fullname"
                required
              />
              <label for="fullname">Full Name</label>
            </div>

            <!-- Email -->
            <div class="form-floating form-floating-sm mb-2">
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="Email"
                name="email"
                value="<%=oldData.email %>"
                required
              />
              <label for="email">Email address</label>
            </div>

            <!-- Password -->
            <div class="form-floating form-floating-sm mb-2">
              <div class="form-floating">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  placeholder="Password"
                  name="password"
                  value="<%=oldData.password %>"
                  required
                />
                <label for="password">Password</label>
                <span
                  class="position-absolute top-50 end-0 translate-middle-y me-3"
                  style="cursor: pointer"
                  id="togglePassword"
                >
                  <i class="bi bi-eye-slash" id="eyeIcon1"></i>
                </span>
              </div>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating form-floating-sm mb-2">
              <div class="form-floating">
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  placeholder="Confirm Password"
                  name="confirmPassword"
                  value="<%=oldData.confirmPassword %>"
                  required
                />
                <label for="confirmPassword">Confirm Password</label>
                <span
                  class="position-absolute top-50 end-0 translate-middle-y me-3"
                  style="cursor: pointer"
                  id="toggleConfirmPassword"
                >
                  <i class="bi bi-eye-slash" id="eyeIcon2"></i>
                </span>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-center mt-2">
              <button
                type="submit"
                class="btn btn-submit btn-custom-small w-50 mb-2"
              >
                Create account
              </button>
            </div>

            <!-- Login Redirect -->
            <p class="text-center small">
              Already have an account?
              <a
                href="/login"
                class="text-decoration-none fw-bold"
                style="color: dodgerblue"
                >Login</a
              >
            </p>

            <!-- Social Login -->
            <div class="text-center my-2">
              <small class="text-muted">Or Sign up with</small>
            </div>

            <div class="d-flex gap-2">
              <button type="button" class="social-btn w-100">
                <img
                  src="https://cdn-icons-png.flaticon.com/512/145/145802.png"
                  alt="Facebook"
                />
                Facebook
              </button>
              <button type="button" class="social-btn w-100">
                <img
                  src="https://cdn-icons-png.flaticon.com/512/300/300221.png"
                  alt="Google"
                />
                Google
              </button>
              <button type="button" class="social-btn w-100">
                <img
                  src="https://cdn-icons-png.flaticon.com/512/179/179309.png"
                  alt="Apple"
                />
                Apple
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/client/js/register/register.js"></script>
  </body>
</html>
