<div class="container-fluid py-4 mb-4 hero-header">
  <div class="banner container py-4">
    <div class="row g-5 align-items-center">
      <!-- Nội dung giới thiệu -->
      <div class="col-md-12 col-lg-5">
        <h1 class="mb-4 text-heading-1 fw-bold">Sản phẩm chính hãng 100%</h1>
        <h3 class="mb-3 display-3 text-heading-2">
          Trải nghiệm tương lai ngay trong lòng bàn tay bạn
        </h3>
        <h5 class="mt-4 mb-4 fs-6 text-muted">
          Chính hãng | Mẫu mới nhất | Giá tốt nhất
        </h5>
      </div>

      <!-- Carousel hình ảnh sản phẩm -->
      <div class="col-md-12 col-lg-7">
        <div
          id="carouselId"
          class="carousel slide position-relative"
          data-bs-ride="carousel"
          aria-label="Trình chiếu hình ảnh sản phẩm nổi bật"
        >
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active rounded">
              <img
                src="/client/img/banner/banner1.jpg"
                class="img-fluid w-100 h-100 bg-secondary rounded object-fit-cover"
                alt="Điện thoại cao cấp màu trắng bóng"
              />
            </div>
            <div class="carousel-item rounded">
              <img
                src="/client/img/banner/banner2.jpg"
                class="img-fluid w-100 h-100 rounded object-fit-cover"
                alt="Mẫu điện thoại mới với camera đa ống kính"
              />
            </div>
            <div class="carousel-item rounded">
              <img
                src="https://i.pinimg.com/736x/5a/7e/90/5a7e903fa4d36808abddba1d331a4a34.jpg"
                class="img-fluid w-100 h-100 rounded object-fit-cover"
                alt="Giao diện điện thoại với màn hình sáng rõ"
              />
            </div>
            <div class="carousel-item rounded">
              <img
                src="https://i.pinimg.com/736x/88/04/d2/8804d261e5d3b4cbddaf73fc98f00842.jpg"
                class="img-fluid w-100 h-100 rounded object-fit-cover"
                alt="Điện thoại đen sang trọng phong cách hiện đại"
              />
            </div>
          </div>

          <!-- Nút điều hướng -->
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselId"
            data-bs-slide="prev"
            aria-label="Xem hình ảnh trước"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselId"
            data-bs-slide="next"
            aria-label="Xem hình ảnh tiếp theo"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
