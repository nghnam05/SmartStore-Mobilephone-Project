<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Create User - Mobilephone Shop</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://i.pinimg.com/736x/61/0c/bd/610cbd83032444da98b38a47a1ee9fb1.jpg"
    />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
  </head>

  <body class="sb-nav-fixed">
    <%- include('../header.ejs'); -%>
    <div id="layoutSidenav">
      <%- include('../sidenav.ejs'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4 h-100">
            <h1 class="mt-3 mb-2 text-dark">Manage Users</h1>
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active">User</li>
              <li class="breadcrumb-item active">Create user</li>
            </ol>
            <hr />
            <!-- form create -->
            <div class="container d-flex justify-content-center mt-5 mb-5">
              <div class="col-md-10 col-lg-8">
                <div class="card shadow rounded-4">
                  <div class="card-body p-5">
                    <h3 class="card-title text-center mb-4 text-dark fw-bold">
                      Create New User
                    </h3>

                    <form
                      action="/admin/handle-create-user"
                      method="post"
                      enctype="multipart/form-data"
                    >
                      <!-- Name -->
                      <div class="form-floating mb-4">
                        <input
                          type="text"
                          class="form-control rounded-3"
                          id="name"
                          name="fullname"
                          placeholder="Full Name"
                          required
                        />
                        <label for="name"
                          ><i class="bi bi-person-fill me-2"></i>Full
                          Name</label
                        >
                      </div>
                      <div class="row g-4 mb-4">
                        <!-- Phone -->
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              type="text"
                              class="form-control rounded-3"
                              name="phone"
                              placeholder="Phone Number"
                              required
                            />
                            <label for="phone">
                              <i class="bi bi-telephone-fill me-2"></i>Phone
                              Number
                            </label>
                          </div>
                        </div>
                        <!-- Role -->
                        <div class="col-md-6">
                          <div class="form-floating">
                            <select
                              name="role"
                              class="form-select rounded-3"
                              id="role"
                              required
                            >
                              <option value="" selected disabled>
                                Choose role
                              </option>
                              <% roles.forEach((role) => { %>
                              <option value="<%= role.id %>">
                                <%= role.name %>
                              </option>
                              <% }) %>
                              <!-- <option value="Admin">Admin</option>
                              <option value="User">User</option> -->
                            </select>
                            <label for="role">
                              <i class="bi bi-shield-lock-fill me-2"></i>Role
                            </label>
                          </div>
                        </div>
                      </div>
                      <!-- Email -->
                      <div class="form-floating mb-4">
                        <input
                          type="email"
                          class="form-control rounded-3"
                          id="email"
                          name="username"
                          placeholder="Email"
                          required
                        />
                        <label for="email"
                          ><i class="bi bi-envelope-fill me-2"></i>Email</label
                        >
                      </div>
                      <!-- upload avatar -->
                      <div class="form-floating d-flex mb-4">
                        <input
                          type="file"
                          class="form-control rounded-3 mt-2"
                          id="avatar"
                          name="avatar"
                          accept="image/*"
                          placeholder="Avatar"
                          onchange="previewAvatar(event)"
                        />
                        <label for="avatar mb-3">
                          <i class="bi bi-image-fill me-2"></i>Avatar
                        </label>
                      </div>

                      <!-- Preview Image -->
                      <div class="mb-4">
                        <img
                          id="avatarPreview"
                          src="#"
                          alt="Avatar Preview"
                          class="img-thumbnail d-none"
                          style="max-width: 200px; max-height: 200px"
                        />
                      </div>

                      <!-- Address -->
                      <div class="form-floating mb-4">
                        <textarea
                          class="form-control rounded-3"
                          placeholder="Address"
                          id="address"
                          name="address"
                          style="height: 70px"
                          required
                        ></textarea>
                        <label for="address"
                          ><i class="bi bi-geo-alt-fill me-2"></i>Address</label
                        >
                      </div>

                      <!-- Submit -->
                      <div class="d-flex justify-content-center">
                        <button
                          type="submit"
                          class="btn btn-success w-50 py-2 rounded-3 fw-semibold shadow-sm"
                        >
                          <i class="bi bi-plus-circle me-2"></i>Create User
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
        <%- include("../footer.ejs"); -%>
      </div>
    </div>
    <script>
      function previewAvatar(event) {
        const input = event.target;
        const preview = document.getElementById("avatarPreview");

        if (input.files && input.files[0]) {
          const reader = new FileReader();

          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.classList.remove("d-none");
          };

          reader.readAsDataURL(input.files[0]);
        }
      }
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
