<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>SmartZone-Mobilephone Store</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://i.pinimg.com/736x/89/f1/d6/89f1d65fe8b8bf81eb8ddbb417537d17.jpg"
    />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Glide.js CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.6.0/dist/css/glide.core.min.css"
    />

    <!-- Glide.js JS -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide@3.6.0/dist/glide.min.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
      rel="stylesheet"
    />
    <!-- Icon Font Stylesheet -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link
      href="/client/lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <link href="/client/css/style.css" rel="stylesheet" />
    <link href="/client/css/home/home.css" rel="stylesheet" />
    <link href="/client/css/layout/layout.css" rel="stylesheet" />
  </head>

  <body>
    <!-- Spinner Start -->
    <div
      id="spinner"
      class="show d-flex justify-content-center align-items-center"
    >
      <div class="spinner-border text-primary" role="status"></div>
    </div>

    <%- include('../layout/header') %>
    <!-- end header -->

    <!-- Hero Start -->
    <%- include('../layout/banner') %>
    <!-- Hero End -->

    <!-- Featurs Section Start -->

    <%- include('../layout/feature') %>

    <!-- Featurs Section End -->

    <!--  Shop Start-->
    <div class="container-fluid feature-page bg-light">
      <div class="container py-5">
        <div class="tab-class text-center">
          <div class="row g-4 d-flex algin-item-center">
            <div class="col-lg-4 text-start">
              <h3 class="section-title d-flex align-items-end gap-2">
                <i class="bi bi-shop text-primary fs-2"></i>
                <span>Featured Products</span>
              </h3>
            </div>

            <div class="col-lg-8 text-end">
              <ul class="nav nav-pills d-inline-flex text-center mb-5">
                <li class="nav-item">
                  <a
                    class="all-btn d-flex align-items-center text-white gap-2 py-2 px-3 m-2 rounded-pill shadow-sm custom-tab all-product"
                    data-bs-toggle="pill"
                    href="#tab-2"
                  >
                    <i class="fas fa-box-open"></i>
                    <span class="fw-medium">All Products</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show active">
              <div class="row g-4">
                <div class="col-lg-12">
                  <div class="row g-4">
                    <% products.forEach((product) => { %>
                    <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                      <div
                        class="card product-card h-100 shadow-sm border-0 rounded-4 overflow-hidden pt-2 position-relative"
                      >
                        <!-- product image-->

                        <div class="card-image position-relative">
                          <img
                            src="/images/product/<%= product.image %>"
                            class="card-img-top object-fit-contain"
                            alt="product-image"
                          />
                        </div>

                        <!-- Nội dung sản phẩm -->
                        <div
                          class="card-body text-start d-flex flex-column gap-1"
                        >
                          <a
                            class="product-name fw-bold fs-5"
                            href="/product/<%= product.id %>"
                          >
                            <%= product.name %>
                          </a>
                          <p class="card-text small text-muted">
                            <%= product.detailDesc %>
                          </p>
                          <div class="d-flex justify-content-start gap-3">
                            <span
                              class="badge rounded-pill shadow-sm d-flex align-items-center gap-1 px-2 py-1 small flash-sale"
                            >
                              <i class="bi bi-lightning-charge-fill"></i> Flash
                              Sale 10%
                            </span>
                          </div>
                          <!-- Giá sản phẩm -->
                          <div class="mt-2">
                            <% const discountPrice = product.price - 1000000; %>
                            <div
                              class="d-flex align-items-center justify-content-center gap-4"
                            >
                              <div>
                                <span class="fw-bold price-text">Price : </span>
                                <del class="text-muted small mb-0 sale-price">
                                  <%= product.price.toLocaleString() %> ₫
                                </del>
                              </div>
                              <!-- Giá sau giảm -->
                              <div class="">
                                <h6 class="text-danger fw-bold">
                                  <%= new Intl.NumberFormat('vi-VN', { style:
                                  'currency' , currency: 'VND'
                                  }).format(discountPrice) %>
                                </h6>
                              </div>
                            </div>
                          </div>

                          <!-- Nút mua -->
                          <form
                            method="post"
                            class="d-flex justify-content-center mt-3"
                            action="/add-product-to-card/<%= product.id %>"
                          >
                            <button
                              type="submit"
                              class="mx-auto btn rounded-pill px-3 buy-btn text-white"
                            >
                              <i class="fa fa-shopping-bag me-2"></i>
                              Add to cart
                            </button>
                          </form>

                          <!-- <div class="d-flex justify-content-center mt-3">
                            <a
                              href="#"
                              class="btn d-inline-flex align-items-center gap-2 px-4 py-1 rounded-lg shadow-sm text-white buy-btn"
                            >
                            <i class="bi bi-cart-plus-fill"></i>
                              <span class="fw-normal">Add to Cart</span>
                            </a>
                          </div> -->
                        </div>
                      </div>
                    </div>

                    <% }) %>
                  </div>
                </div>
                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-end mt-4">
                    <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                      <a
                        class="page-link"
                        href="?page=<%= page - 1 %>"
                        aria-label="Previous"
                      >
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === page ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                    <% } %>
                    <!-- Next -->
                    <li
                      class="page-item <%= page >= totalPages ? 'disabled' : '' %>"
                    >
                      <a
                        class="page-link"
                        href="?page=<%= page + 1 %>"
                        aria-label="Next"
                      >
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Fruits Shop End-->

    <!-- Footer Start -->
    <%- include('../layout/footer') %>

    <!-- Back to Top -->
    <a href="#" class="btn border-3 rounded-circle back-to-top"
      ><i class="fa fa-arrow-up"></i
    ></a>
    <!--  -->
    <script
      src="//code.tidio.co/jessuvetqgbmlfbbicxo08yqsjeeprfb.js"
      async
    ></script>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/client/lib/easing/easing.min.js"></script>
    <script src="/client/lib/waypoints/waypoints.min.js"></script>
    <script src="/client/lib/lightbox/js/lightbox.min.js"></script>
    <script src="/client/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/client/js/main.js"></script>
  </body>
</html>
