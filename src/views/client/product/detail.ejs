  <body>
    <!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('../layout/header') %>
    <div class="container py-3" style="margin-top: 10% !important">
      <nav aria-label="breadcrumb " class="mb-5">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/product">Product details</a></li>
          <li class="breadcrumb-item active" aria-current="page" >
            <%= product.name%>
          </li>
        </ol>
      </nav>

      <div class="row g-4 align-items-start">
        <div class="col-md-6">
          <div class="preview-image-product d-flex flex-column align-items-center">
            <img
              src="/images/product/<%= product.image %>"
              class=""
              alt="<%= product.name %>"
              style="max-width: 70%; height: auto"
            />
          </div>
        </div>
      
        <div class="col-md-6 bg-light d-flex flex-column justify-content-start px-4 py-3 rounded-2">
          <h3 style="color: #0D5EA6"><%= product.name %></h3>
      
          <h4 class="mt-3 text-danger">
            <span class="fs-5 fw-semibold" style="color: #333333;">Price:</span>
            <del class="fs-6" style="color: #999999;">
              <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %>
            </del>
            <span class="ms-3">
              <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price - 1000000) %>
            </span>
          </h4>
      
          <div class="my-3">
            <span class="form-label fw-bold me-3" style="color: #333333;">Color:</span>
            <span class="color-circle" style="background: #000"></span>
            <span class="color-circle" style="background: #fff"></span>
            <span class="color-circle" style="background: #56DFCF"></span>
            <span class="color-circle" style="background: #FFF287"></span>
            <span class="color-circle" style="background: #C68EFD"></span>
            <span class="color-circle" style="background: #CB0404"></span>
          </div>
      
          <div class="my-2">
            <label class="form-label fw-bold" style="color: #333333;">Select storage:</label><br />
            <div class="d-flex gap-2 flex-wrap">
              <button class="storage-option active">128GB</button>
              <button class="storage-option">256GB</button>
              <button class="storage-option">512GB</button>
              <button class="storage-option">1TB</button>
            </div>
          </div>
      
          <div class="mb-3">
            <label class="fw-bold" style="color: #333333;">Detail Decription:</label>
            <p class="card-text small text-muted" style="color: #666666;">
              <%= product.detailDesc %>
            </p>
          </div>
          <!-- buy -->
          <form method="post" class="d-flex mt-3"
          action="/add-product-to-card/<%= product.id %>">
          <button type="submit"
          class="py-2 rounded-pill px-3  buy-btn text-white">

              <i class="fa fa-shopping-bag me-2 "></i>
              Add to cart
          </button>
      </form>
      
     
        </div>
      </div>
      
   
    </div>
     <hr>
    <div class="container ">
      <div class="row mb-3">
       <div class="col-lg-6">
        <h4 class="fw-semibold mb-4" style="color: #000;">About more :</h4>
        <p class="text-muted">
          The iPhone 16 features cutting-edge technology, blending performance, style, and innovation.
        </p>
        <p class="text-muted">
          Equipped with Apple's latest A18 Bionic chip, a stunning Super Retina XDR display, and an advanced camera system — it's designed to redefine your smartphone experience.
        </p>
       </div>
      </div>
  
      <div class="row mb-5">
        <!-- Cột trái -->
        <div class="col-md-4 ">
          <div class="d-flex label-box ">
            <div class="label-title ">Model</div>
            <div><%= product.name %></div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Weight</div>
            <div>228 g</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Color</div>
            <div>Graphite Black</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Camera</div>
            <div>Triple 48MP + LiDAR</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Country of Origin</div>
            <div>USA</div>
          </div>
        </div>
      
        <!-- Cột giữa -->
        <div class="col-md-4">
          <div class="d-flex label-box">
            <div class="label-title">Display</div>
            <div>6.9" OLED, 120Hz</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Processor</div>
            <div>A18 Bionic Chip</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Battery</div>
            <div>4800 mAh</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Storage</div>
            <div>512 GB</div>
          </div>
          <div class="d-flex label-box">
            <div class="label-title">Charging</div>
            <div>Fast Charge, MagSafe</div>
          </div>
        </div>
      
        <!-- Cột category -->
        <div class="col-md-4">
          <h5 class="mb-3 fw-bold border-bottom pb-2 fs-4 text-dark ">Category : </h5>
          <ul class="list-group shadow-sm rounded">
            <li class="list-group-item d-flex align-items-center gap-2 fw-bold">
              <i class="bi bi-tags-fill text-primary "></i> Smartphones
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-phone-fill text-success"></i> iPhone
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-phone-vibrate-fill text-secondary"></i></i> OPPO
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-phone text-primary"></i> SAMSUNG
            </li>
            <li class="list-group-item d-flex align-items-center gap-2">
              <i class="bi bi-phone text-danger"></i> XIAOMI
            </li>
          </ul>
        </div>
        
      </div>
      
    </div>
    <div class="row mb-5 px-5 bg-light py-4">
      <div class="container position-relative px-5">
        <div class="mb-4">
          <h3 class="section-title d-flex align-items-end gap-2">
            <i class="bi bi-shop text-primary fs-2"></i>
            <span>Featured Products</span>
          </h3>
        </div>
   
     <button
       class="scroll-btn scroll-left position-absolute top-50 start-0 translate-middle-y btn btn-light shadow rounded-circle"
       style="z-index: 10"
       onclick="scrollProducts('left')"
     >
       <i class="bi bi-chevron-left fs-4"></i>
     </button>
     <div
       id="productSlider"
       class="d-flex gap-4 overflow-auto px-4 py-2"
       style="scroll-behavior: smooth"
     >
       <% products.forEach((product) => { %>
         <div style="min-width: 240px; max-width: 240px; flex: 0 0 auto">
           <div
             class="card product-card  h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative"
             style="min-height: 320px"
           >
             <div class="card-image d-flex justify-content-center align-items-center p-2" style="height: 180px">
               <img
                 src="/images/product/<%= product.image %>"
                 class="object-fit-cover"
                 alt="product-image"
                 style="max-height: 100%; max-width: 90%;"
               />
             </div>
             <div class="card-body text-start d-flex flex-column justify-content-between gap-2 px-3 pb-3">
               <h6 class="product-name fw-bold mb-1 fs-6" style="color: #0D5EA6;">
                 <%= product.name %>
               </h6>
               <p class="card-text small text-muted mb-2 clamp-2-line" style="font-size: 0.85rem;">
                 <%= product.detailDesc %>
               </p>
               <div class="d-flex justify-content-center">
                 <a
                 href="/product/<%= product.id %>"
                 class="text-decoration-none text-dark fw-medium small d-inline-flex align-items-center gap-1 hover-underline bg-light py-1 px-2 rounded-pill"
               >
                 View Details
                 <i class="bi bi-box-arrow-up-right"></i>
               </a>
               </div>
             </div>
           </div>
         </div>
         
       <% }); %>
     </div>
   
     <button
       class="scroll-btn scroll-right position-absolute top-50 end-0 translate-middle-y btn btn-light shadow rounded-circle"
       style="z-index: 10"
       onclick="scrollProducts('right')"
     >
       <i class="bi bi-chevron-right fs-4"></i>
     </button>
   </div>  
    </div>

  

    <!-- back to top  -->
    <a href="#" class="btn border-3 rounded-circle back-to-top"
      ><i class="fa fa-arrow-up"></i
    ></a>
    <a href="#" class="btn border-3 rounded-circle back-to-top"
    ><i class="fa fa-arrow-up"></i
  ></a>
