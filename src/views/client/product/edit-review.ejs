    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('../layout/header') %>


    <div class="container py-5" style="margin-top: 8%;">
      <div class="row justify-content-center">
        <div
          class="col-md-7 bg-white p-5 rounded-4"
          style="box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);"
        >
          <h4 class="mb-4" style="color: #0d6efd;">
            <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa đánh giá của bạn
          </h4>
          <form
            method="POST"
            action="/product/<%= product.id %>/review/<%= review.id %>"
          >
            <!-- Đánh giá sao -->
            <div class="mb-4">
              <label class="form-label fw-semibold" style="color: #343a40;">
                Đánh giá (số sao)
              </label>
              <select
                name="rating"
                class="form-select border rounded-3"
                style="border-color: #cfe2ff;"
                required
              >
                <% for (let i = 1; i <= 5; i++) { %>
                <option value="<%= i %>" <%= i === review.rating ? 'selected' : ''
                  %>>
                  <%= i %> sao
                </option>
                <% } %>
              </select>
            </div>
    
            <!-- Nội dung đánh giá -->
            <div class="mb-4">
              <label class="form-label fw-semibold" style="color: #343a40;">
                Nội dung đánh giá
              </label>
              <textarea
                name="content"
                rows="4"
                class="form-control border rounded-3"
                style="border-color: #dee2e6; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);"
                placeholder="Cập nhật lại trải nghiệm của bạn..."
               
                required
              ><%= review.content %></textarea>
            </div>
    
            <!-- Nút hành động -->
            <div class="d-flex justify-content-between align-items-center">
              <a
                href="/product/<%= product.id %>"
                class="btn rounded-pill px-4"
                style="border: 1px solid #ced4da; color: #6c757d;"
              >
                <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
              </a>
              <button
                type="submit"
                class="btn rounded-pill px-4"
                style="background-color: #198754; color: white;"
              >
                <i class="bi bi-save me-1"></i> Cập nhật đánh giá
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    
