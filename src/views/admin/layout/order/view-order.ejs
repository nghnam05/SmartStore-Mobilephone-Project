<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>View Order Details - Mobilephone Shop</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://i.pinimg.com/736x/61/0c/bd/610cbd83032444da98b38a47a1ee9fb1.jpg"
    />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <link href="/admin/css/user/user.css" rel="stylesheet" />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
  </head>

  <body class="sb-nav-fixed">
    <%- include('../header.ejs'); -%>
    <div id="layoutSidenav">
      <%- include('../sidenav.ejs'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4">Manage Order</h1>
            <hr />
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active">Order Detail</li>
            </ol>

            <div>
              <table
                class="table table-hover table-bordered align-middle text-center mt-4"
              >
                <thead class="table-dark">
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Name Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Toltal Price</th>
                    <th scope="col">Receiver name</th>
                    <th scope="col">Receiver numberphone</th>
                    <th scope="col">Receiver address</th>
                  </tr>
                </thead>
                <tbody>
                  <% orderDetails.forEach((item) => { %>
                  <tr class="align-middle">
                    <!-- Hình ảnh sản phẩm -->
                    <td style="width: 80px">
                      <img
                        src="/images/product/<%= item.product.image %>"
                        alt="Product Image"
                        class="img-fluid rounded"
                        style="max-width: 70px; height: auto"
                      />
                    </td>

                    <td><strong><%= item.product.name %></strong></td>

                    <!-- Tổng giá (format VND) -->
                    <td class="text-success fw-bold">
                      <%= new Intl.NumberFormat('vi-VN', { style: 'currency',
                      currency: 'VND' }).format(item.product.price) %>
                    </td>
                    <td><%=item.product.quantity %></td>
                    <!-- Trạng thái đơn -->
                    <td>
                      <%= new Intl.NumberFormat('vi-VN', { style: 'currency',
                      currency: 'VND' }).format(item.product.price *
                      item.product.quantity) %>
                    </td>
                    <td><%=item.order.receiverName%></td>
                    <td><%=item.order.receiverPhone%></td>
                    <td><%=item.order.receiverAddress%></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </main>
        <%- include("../footer.ejs"); -%>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
