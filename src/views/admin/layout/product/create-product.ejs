<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Product - Mobilephone Shop</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://i.pinimg.com/736x/61/0c/bd/610cbd83032444da98b38a47a1ee9fb1.jpg"
    />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <link href="/admin/css/product/product.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body class="sb-nav-fixed">
    <%- include('../header.ejs'); -%>
    <div id="layoutSidenav">
      <%- include('../sidenav.ejs'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4 text-dark">Manage Products</h1>
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item">
                <a href="/admin/product">Products</a>
              </li>
              <li class="breadcrumb-item active">Create Product</li>
            </ol>
            <hr />

            <!-- FORM -->
            <div class="row justify-content-center mt-4 mb-5">
              <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg rounded-4 border-0">
                  <div class="card-body p-5">
                    <h3 class="text-center fw-bold mb-4 text-dark">
                      <i class="bi bi-cloud-plus me-2"></i>Create New Product
                    </h3>
                    <form
                      action="/admin/create-product"
                      method="post"
                      enctype="multipart/form-data"
                    >
                      <!-- Name -->
                      <div class="form-floating mb-4">
                        <input
                          type="text"
                          class="form-control rounded-3"
                          id="name"
                          name="name"
                          placeholder="Product Name"
                          required
                        />
                        <label for="name"
                          ><i class="bi bi-type me-2"></i> Name</label
                        >
                      </div>

                      <!-- Price & Quantity -->
                      <div class="row g-4 mb-4">
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              type="text"
                              class="form-control rounded-3"
                              name="price"
                              placeholder="xx.x$"
                              required
                            />
                            <label
                              ><i class="bi bi-cash-stack me-2"></i>
                              Price</label
                            >
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              type="number"
                              class="form-control rounded-3"
                              name="quantity"
                              placeholder="Quantity"
                              required
                            />
                            <label
                              ><i class="bi bi-123 me-2"></i> Quantity</label
                            >
                          </div>
                        </div>
                      </div>

                      <!-- Short Description -->
                      <div class="form-floating mb-4">
                        <input
                          type="text"
                          class="form-control rounded-3"
                          id="shortDesc"
                          name="shortDesc"
                          placeholder="Short description"
                          required
                        />
                        <label for="shortDesc"
                          ><i class="bi bi-info-circle-fill me-2"></i> Short
                          Description</label
                        >
                      </div>

                      <!-- Factory & Target -->
                      <div class="row g-4 mb-4">
                        <div class="col-md-6">
                          <label class="form-label fw-semibold">Factory</label>
                          <select name="factory" class="form-select rounded-3">
                            <option value="APPLE">Apple</option>
                            <option value="SAMSUNG">Samsung</option>
                            <option value="OPPO">Oppo</option>
                            <option value="XIAOMI">Xiaomi</option>
                          </select>
                        </div>
                        <div class="col-md-6">
                          <label class="form-label fw-semibold">Target</label>
                          <select name="target" class="form-select rounded-3">
                            <option value="Gaming">Gaming phone</option>
                            <option value="Thin & Light">Mỏng nhẹ</option>
                            <option value="HOT">Hot trend</option>
                          </select>
                        </div>
                      </div>

                      <!-- Upload Avatar -->
                      <div class="mb-4">
                        <label for="avatar" class="form-label fw-semibold"
                          >Upload Product Image</label
                        >
                        <input
                          type="file"
                          class="form-control rounded-3"
                          name="image"
                          accept="image/*"
                          onchange="previewAvatar(event)"
                        />
                      </div>

                      <!-- Preview -->
                      <div class="mb-4 text-start">
                        <img
                          id="avatarPreview"
                          src="#"
                          alt="Avatar Preview"
                          class="img-thumbnail d-none"
                        />
                        <!--  style="max-width: 200px; max-height: 200px" -->
                      </div>

                      <!-- Detail Description -->
                      <div class="form-floating mb-4">
                        <textarea
                          class="form-control rounded-3"
                          id="detailDesc"
                          name="detailDesc"
                          style="height: 100px"
                          required
                        ></textarea>
                        <label for="detailDesc"
                          ><i class="bi bi-card-text me-2"></i> Detail
                          Description</label
                        >
                      </div>

                      <!-- Submit -->
                      <div class="d-flex justify-content-center gap-4">
                        <a
                          href="/admin/product"
                          class="btn btn-success text-white"
                          ><i class="bi bi-arrow-return-left"></i> Back to
                          Home</a
                        >
                        <button
                          type="submit"
                          class="btn btn-warning rounded-3 fw-semibold shadow-sm"
                        >
                          <i class="bi bi-check-circle me-2"></i> Create Product
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
        <%- include("../footer.ejs"); -%>
      </div>
    </div>

    <!-- Scripts -->
    <script>
      function previewAvatar(event) {
        const input = event.target;
        const preview = document.getElementById("avatarPreview");

        if (input.files && input.files[0]) {
          const reader = new FileReader();
          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.classList.remove("d-none");
          };
          reader.readAsDataURL(input.files[0]);
        }
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/js/scripts.js"></script>
  </body>
</html>
